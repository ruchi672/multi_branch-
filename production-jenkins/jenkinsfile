node {
     
  	stage('Git-Checkout') {
 		git branch: production', url: 'https://github.com/ruchi672/multi_branch-.git'  
  	}



	stage('AWS - Production Server Provisioning'){
	   sh label: 'terraform', script: 'sudo /root/bin/terraform  init'
	   sh label: 'terraform', script: 'sudo /root/bin/terraform  apply -input=false -auto-approve'
	   }

	stage('Download package from JFrog') {
            def server= Artifactory.server 'artifactory'
            def downloadSpec = """{
            "files": [
            {
                "pattern": "mavenrepo/capstoneproject-0.0.1-SNAPSHOT.war",
                "target": "./capstoneproject.war"
            }
            ]
            }"""
        server.download(downloadSpec)
    }
    
    stage('Deployment into production'){
 	 //	sh label: 'ansible', script: 'sudo ansible-playbook -i inventory -u ubuntu --key /root/.ssh/mkey.pem ./web-playbook.yaml'
	
	ansiblePlaybook become: true, credentialsId: 'aws-ssh', disableHostKeyChecking: true, inventory: 'inventory', playbook: 'web-playbook.yml'

     }	   

   


}


